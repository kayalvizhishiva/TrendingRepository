<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_8_sp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="95dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_2_sp"
            app:cardElevation="@dimen/dimen_2_sp"
            android:layout_marginTop="@dimen/dimen_2_sp"
            app:cardBackgroundColor="@color/back_groung_colour"
            app:cardUseCompatPadding="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/dimen_2_sp"
              android:layout_marginLeft="@dimen/dimen_4_sp">


              <ImageView
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@drawable/square_image_transe"
                  android:layout_gravity="center"
                  android:padding="@dimen/dimen_2_sp"
                  android:layout_marginLeft="@dimen/dimen_2_sp"/>
              <TextView
                  android:id="@+id/square"
                  style="@style/list_heading"
                  android:padding="@dimen/dimen_2_sp"
                  android:text="Square" />
          </LinearLayout>

          <TextView
              android:id="@+id/repo_heading"
              style="@style/list_heading"
              android:padding="@dimen/dimen_4_sp"
              android:textColor="@color/black"
              android:text="heading" />


          <TextView
              android:id="@+id/repo_desc"
              style="@style/desc"
              android:text="description kjsdf dfkg osidg sdogi sdoigh sdoigh sodigh sdiogh sdoigh sdosjdfh sdhf siduhf isduh isdy isdyg igh sdoigh dgiohdioboisdgboid idsvosidvidsu sdoigodi"
              android:inputType="textMultiLine" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/dimen_4_sp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:padding="@dimen/dimen_4_sp">
                  <Button
                      android:id="@+id/language_btn"
                      android:layout_height="15dp"
                      android:layout_width="15dp"
                      android:gravity="center"
                      android:background="@drawable/round_btn"
                      android:layout_marginRight="@dimen/dimen_4_sp"
                      android:layout_marginLeft="@dimen/dimen_2_sp"
                      android:layout_marginTop="@dimen/dimen_4_sp"/>

                  <TextView
                      android:id="@+id/language_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dimen_2_sp"
                      android:text="language name" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:padding="@dimen/dimen_4_sp"
                  android:gravity="right">
                  <ImageView
                      android:id="@+id/rating_image"
                      android:src="@drawable/rateimage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:layout_marginRight="@dimen/dimen_10_sp"/>
                  <TextView
                          android:id="@+id/rate_nos"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="44"
                      android:textSize="@dimen/dimen_14_sp"
                      android:gravity="right"
                      android:layout_marginRight="@dimen/dimen_8_sp"/>
              </LinearLayout>
          </LinearLayout>
      </LinearLayout>

        </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>